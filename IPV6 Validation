<script src="https://cdnjs.cloudflare.com/ajax/libs/is_js/0.9.0/is.js"></script>
<script>
function isValidIP(str) {
   return is.ipv6(str);
}
console.log(isValidIP('2001:DB8:0:0:1::1'));
console.log(isValidIP('985.12.3.4'));
console.log(isValidIP('8:::::::7'));
console.log(isValidIP('2001:DB8:0:0:1::1', '1:50:198:2::1:2:8'));
console.log(isValidIP('255.255.255.255', '2001:DB8:0:0:1::1'));
console.log(isValidIP(['2001:DB8:0:0:1::1', '1.2.3']));

</script>
